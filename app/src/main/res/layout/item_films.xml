<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        android:id="@+id/film_item"
        android:layout_height="150dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="110dp"
                android:layout_marginStart="10dp"
                android:id="@+id/film_image"
                android:src="#00C853"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/film_description"
                    android:layout_width="184dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="my name is islom and im am 17 years old"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <TextView
                    android:drawableStart="@drawable/round_star_24"
                    android:id="@+id/film_reviews"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="16dp"
                    android:text=" 10/11 IMDP"
                    android:textColor="#B5AEAE"
                    android:textSize="13sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="16dp"
                    android:layout_height="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Horror"
                        android:id="@+id/style"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textColor="#2962FF"
                        android:paddingHorizontal="10dp"
                        android:background="@drawable/film_stile_back"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <TextView
                    android:drawableStart="@drawable/round_access_time_24"
                    android:id="@+id/hours"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="16dp"
                    android:text=" 1h 24m"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>











        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>